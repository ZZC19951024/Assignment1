Traffic Junciton 

Class: CarDrivers
State: DriverID
Behavior: Brake(),Drive()
          
------------------------------------------------

Class: TrafficLight
State: TLDirection, LightColor
Behavior: IsWorking()//check the traffic light is working

------------------------------------------------

Class: Pedestrain
State: Name
Behavior: Walk(), Stop()
          IsNToS()//check the car and pedestrain direction
          IsWToE()
------------------------------------------------

Class: TrafficJunction
Behavior: Start(){
          CarID Car1, Car2, Car3;
          Name a, b, c;
          LightColor Green, Yellow, Red;
          TLDriection NToS, WToE;
          if(!IsWorking){
             return false;
          }
          Car1.Drive();
          Car2.Drive();
          Car3.Drive();
          while(TrafficLight.NToS==Greenï¼‰{
               if(car1.IsNToS()){
               car1.Drive();
               }
               else{
               car1.Brake();
               }
               if(car2.IsNToS){
               car2.Drive();
               }
               else{
               car2.Brake();
               }
               if(car3.IsNToS()}{
               car3.Drive();
               }
               else{
               car3.Brake();
               }
               if(a.IsNToS()){a.Walk();}
               else(a.Stop();)
               if(b.IsNToS()){b.Walk();}
               else(b.Stop();)
               if(c.IsNToS()){c.Walk();}
               else(c.Stop();)
          }
          while(TrafficLight.WToE){
               if(car1.IsWToE()){car1.Drive();}
               else{car1.Brake();}
               if(car2.IsWToE()){car2.Drive();}
               else{car2.Brake();}
               if(car3.IsWToE()){car3.Drive();}
               else{car3.Brake();}
               if(a.IsWToE()){a.Walk();}
               else(a.Stop();)
               if(b.IsWToE()){b.Walk();}
               else(b.Stop();)
               if(c.IsWToE()){c.Walk();}
               else(c.Stop();)
          }
          
          
}
